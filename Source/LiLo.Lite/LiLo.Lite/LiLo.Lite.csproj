<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
	<TargetFramework>netstandard2.0</TargetFramework>
	<ProduceReferenceAssembly>true</ProduceReferenceAssembly>
	  <LangVersion>8.0</LangVersion>
	  <Description>LiLo 'lite' is a light-weight version of LiLo, that includes live real-time market information and charting.</Description>
	  <Copyright>2020 George Leithead, InternetWideWorld.com</Copyright>
	  <PackageProjectUrl>https://github.com/GeorgeLeithead/LiLo.Lite</PackageProjectUrl>
	  <RepositoryUrl>https://github.com/GeorgeLeithead/LiLo.Lite</RepositoryUrl>
	  <RepositoryType>GIT</RepositoryType>
	  <PackageTags>ByBit, Crypto, BTC, ETH, EOS, XRP</PackageTags>
	  <Company>InternetWideWorld.com</Company>
	  <Authors>George Leithead</Authors>
	  <PackageLicenseFile>LICENSE</PackageLicenseFile>
	  <PackageIcon>launcher_foreground.png</PackageIcon>
  </PropertyGroup>

  <ItemGroup>
	<PackageReference Include="CardsView" Version="2.6.2" />
	<PackageReference Include="Microsoft.AppCenter.Analytics" Version="3.3.0" />
	<PackageReference Include="Microsoft.AppCenter.Crashes" Version="3.3.0" />
	<PackageReference Include="Microsoft.AppCenter.Distribute" Version="3.3.0" />
	<PackageReference Include="Resizetizer.NT" Version="0.1.0" />
	<PackageReference Include="System.ComponentModel.Annotations" Version="4.7.0" />
	<PackageReference Include="System.Text.Json" Version="4.7.2" />
	<PackageReference Include="WebSocketSharp-netstandard" Version="1.0.1" />
	<PackageReference Include="Xamarin.Essentials" Version="1.5.3.2" />
	<PackageReference Include="Xamarin.Forms" Version="4.7.0.1080" />  
	<PackageReference Include="Xamarin.Forms.PancakeView" Version="1.4.2" />  
	<PackageReference Include="Xamarin.Plugin.SharedTransitions" Version="2.2.0" />
  </ItemGroup>

	<ItemGroup>
		<None Remove="SharedImages\home.svg" />
		<None Remove="SharedImages\home_dark.svg" />
		<None Remove="SharedImages\ladder.svg" />
		<None Remove="SharedImages\ladder_dark.svg" />
		<None Remove="SharedImages\settings.svg" />
		<None Remove="SharedImages\settings_dark.svg" />
		<None Remove="SharedImages\chart.svg" />
		<None Remove="SharedImages\chart_dark.svg" />
		<None Remove="SharedImages\position.svg" />
		<None Remove="SharedImages\position_dark.svg" />
		<None Remove="SharedImages\btc.svg" />
		<None Remove="SharedImages\eth.svg" />
		<None Remove="SharedImages\eos.svg" />
		<None Remove="SharedImages\xrp.svg" />
		<None Remove="SharedImages\twitter.svg" />
		<None Include="..\..\..\LICENSE">
		  <Pack>True</Pack>
		  <PackagePath></PackagePath>
		</None>
		<None Include="..\..\..\Screenshots\launcher_foreground.png">
		  <Pack>True</Pack>
		  <PackagePath></PackagePath>
		</None>
	</ItemGroup>

	<ItemGroup>
		<SharedImage Include="SharedImages\home.svg" BaseSize="32,32" />
		<SharedImage Include="SharedImages\home_dark.svg" BaseSize="32,32" />
		<SharedImage Include="SharedImages\ladder.svg" BaseSize="32,32" />
		<SharedImage Include="SharedImages\ladder_dark.svg" BaseSize="32,32" />
		<SharedImage Include="SharedImages\settings.svg" BaseSize="32,32" />
		<SharedImage Include="SharedImages\settings_dark.svg" BaseSize="32,32" />
		<SharedImage Include="SharedImages\chart.svg" BaseSize="32,32" />
		<SharedImage Include="SharedImages\chart_dark.svg" BaseSize="32,32" />
		<SharedImage Include="SharedImages\position.svg" BaseSize="32,32" />
		<SharedImage Include="SharedImages\position_dark.svg" BaseSize="32,32" />
		<SharedImage Include="SharedImages\btc.svg" BaseSize="32,32" />
		<SharedImage Include="SharedImages\eth.svg" BaseSize="32,32" />
		<SharedImage Include="SharedImages\eos.svg" BaseSize="32,32" />
		<SharedImage Include="SharedImages\xrp.svg" BaseSize="32,32" />
		<SharedImage Include="SharedImages\twitter.svg" BaseSize="32,32" />
	</ItemGroup>

	<ItemGroup>
	  <EmbeddedResource Update="Controls\TitleBar.xaml">
	    <Generator>MSBuild:UpdateDesignTimeXaml</Generator>
	  </EmbeddedResource>
	</ItemGroup>
</Project>