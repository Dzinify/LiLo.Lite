<?xml version="1.0" encoding="utf-8" ?>
<Shell
	x:Class="LiLo.Lite.AppShell"
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:views="clr-namespace:LiLo.Lite.Views"
	Shell.FlyoutBehavior="Disabled"
	Shell.NavBarHasShadow="True"
	Visual="Material">
	<FlyoutItem Route="Home">
		<ShellContent ContentTemplate="{DataTemplate views:HomeView}" />
	</FlyoutItem>
	<FlyoutItem Route="Chart">
		<ShellContent ContentTemplate="{DataTemplate views:ChartView}" />
	</FlyoutItem>
</Shell>