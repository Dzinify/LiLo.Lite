<?xml version="1.0" encoding="utf-8" ?>
<Shell
	x:Class="LiLo.Lite.AppShell"
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:lite="clr-namespace:LiLo.Lite"
	xmlns:views="clr-namespace:LiLo.Lite.Views"
	x:DataType="lite:AppShell"
	Shell.FlyoutBehavior="Disabled"
	Shell.NavBarHasShadow="True"
	Visual="Material">
	<FlyoutItem>
		<ShellContent ContentTemplate="{DataTemplate views:HomeView}" Route="Home" />
	</FlyoutItem>
	<FlyoutItem>
		<ShellContent ContentTemplate="{DataTemplate views:ChartView}" Route="Chart" />
	</FlyoutItem>
	<FlyoutItem>
		<ShellContent ContentTemplate="{DataTemplate views:SettingsView}" Route="Settings" />
	</FlyoutItem>
	<FlyoutItem>
		<ShellContent ContentTemplate="{DataTemplate views:FavouritesView}" Route="Favourites" />
	</FlyoutItem>
</Shell>